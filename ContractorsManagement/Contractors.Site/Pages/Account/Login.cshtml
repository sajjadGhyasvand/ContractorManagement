@page "/login"
@model Contractors.Site.Pages.Account.LoginModel
@{
    ViewData["Title"] = "صفحه ورود";
}

<body dir="rtl" class="main-pic">
    <div class="container panel panel-body col-md-6 col-xs-12 text-center rounded mt-3 " style="background:#45b39d;box-shadow:6px 6px 3px 0 #2c3e50;">
        <div class="row ">

            <div class="col-md-6">
                <div class="d-flex justify-content-center col-md-6">
                    <img src="~/img/logo.png" style="width:100px;height:100px;" />
                </div>
                <div class="col-xs-12 col-md-12 alert text-white mt-2" style="text-align:center; background-color:#F4d03f; height:50px;">
                    <span class="fs-5 fw-bold text-white ">سامانه مدیریت شهرداری تهران</span>
                </div>
                <hr style="height:3px" />
                <form method="post" class="mb-2">
                    <div class="form-group col-xs-12 col-md-11 mx-3 my-2">
                        <div class="input-group">
                            <i class="fa fa-user pt-2 px-2" style="font-size:20px;width:30px;color:#2e4469; border:1px solid #2e4469; border-radius:0 5px 5px 0"></i>
                            <input type="text" class="form-control text-center" autocomplete="off" style="border-radius: 5px 0 0  5px" placeholder="نام کاربری" />
                            <span class="text-danger fw-bold"></span>
                        </div>
                    </div>
                    <div class="form-group col-xs-12 col-md-11 mx-3 my-2">
                        <div class="input-group">
                            <i class="fa fa-lock pt-2 px-2" style="font-size:20px;width:30px;color:#2e4469; border:1px solid #2e4469; border-radius:0 5px 5px 0"></i>
                            <input type="text" class="form-control text-center" autocomplete="off" style="border-radius: 5px 0 0  5px" placeholder="گذرواژه" />
                            <span class="text-danger fw-bold"></span>
                        </div>
                    </div>
                    <div class="form-group col-xs-12">
                        <div class="mt-3">
                            <input type="submit" class="btn btn-primary fw-bold text-white " value="ورود به سامانه" />
                        </div>
                    </div>
                    <div class="mt-4" style="border-radius:5px; padding:10px; background:#a9cce3; color:#2471a3">
                        <span>شهرداری تهران</span>
                        <br />
                        <a href="dourost.ir" style="text-decoration:none; color:white; ">dourost.ir</a>
                    </div>
                </form>
            </div>
            <div class="col-md-6" style="text-align:center; color:#5b6d7e; background: #A9cce3; border-radius:5px 0  5px;">
                <h3 style="color:#5d6d7e; font-size:20px; font-weight:bold;margin-top:50px">
                    <i class="fa fa-desktop"></i>
                    <span>نکات امنیتی</span>
                    <hr class="w-100" style="height:1px; background:gray;" />
                    <form style="text-align: right;">
                        <i class="fa fa-power-off"></i>
                        <span>پس از انجام کار حتما از سیستم خارج شوید</span>
                        <br/>
                        <i class="fa fa-key"></i>
                        <span>رمز عبور خود را به هیچ عنوان در اختیار دیگران قرار ندهید</span>
                        <br />
                    </form>
                </h3>
            </div>
        </div>

    </div>
</body>